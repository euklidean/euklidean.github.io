<form name="simple_form" id="simple_form" action="https://getsimpleform.com/messages?form_api_token={{ token | e('html_attr') }}" enctype="multipart/form-data" method="post" class="reservation-form">
    <div class="coll-1">
        <label for="simple_form-field-name">
            <input type="text" id="simple_form-field-name" name="name" class="" placeholder="Name" value="" required="required" />
        </label>
    </div>
    <div class="coll-2">
        <label for="simple_form-field-email">
            <input type="email" id="simple_form-field-email" name="email" class="" placeholder="E-mail" value="" required="required" />
        </label>
    </div>
    <div class="coll-3">
        <label for="simple_form-field-phone">
            <input type="text" id="simple_form-field-phone" name="phone" class="" placeholder="Phone" value=""  />
        </label>
    </div>
    <div class="coll-4">
        <label for="simple_form-field-fax">
            <input type="text" id="simple_form-field-fax" name="fax" class="" placeholder="Fax" value=""  />
        </label>
    </div>
    <div class="coll-5">
        <label for="simple_form-field-comments">
            <textarea id="simple_form-field-content" name="content" class="" placeholder="Comments" required="required"></textarea>
        </label>
    </div>
    <div class="coll-6">
        <div class="buttons-wrapper clearfix">
            <br />
            <button id="simple_form-field-submit" name="submit" class="btn-link btn-link2">submit <span></span></button>
        </div>
    </div>

    {# Redirect URL after submit #}
    <input type="hidden" name="redirect_to" value="{{ redirect_to | e('html_attr') }}" />
</form>